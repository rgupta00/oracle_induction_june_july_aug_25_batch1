package com.demo;

public class DateProblem {

	public static void main(String[] args) {
		// 27-6-2025
		// 31-12-2025
		//
		// 1. take care about leap
		// 2. how many day in every month
		// 3. logic of next day

		int year = 2024;

	}

	

	public static boolean isLeapYear(int year) {
		if ((year % 4 == 0 && year % 100 != 0) || year % 400 == 0)
			return true;
		else
			return false;

	}
}
